<div class="details">
  <div class="jumbotron">
    <h1 class="display-5">Create New User</h1>
    <p class="lead"></p>
    <p class="small"><a href="./">Return to Login Page</a></p>
    <hr class="my-4">
  
    <div class="card bg-light mb-3">
        {{#if error}}
        <h4 class="alert">HTTP 401: {{error}}</h4>
        {{/if}}
        <form method="post" action="/users/register">
            Login:<br>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" name="username">
            </div>
            <br>
            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" name="password">
            </div>
            <label>Select User Type:</label>
            <div class="form-group">
                <input type="radio" id="referee" value="ref" name="type" checked>
                <label for="referee">Referee</label>
                <br>
                <input type="radio" id="admin" value="admin" name="type">
                <label for="admin">Administrator</label>
            </div>
            <label>Select Sports for which you are an Official:</label>
            <div class="form-group">
                <input type="checkbox" id="basketball" value="basketball" name="sport" checked>
                <label for="basketball">Basketball</label>
                <br>
                <input type="checkbox" id="soccer" value="soccer" name="sport">
                <label for="soccer">Soccer</label>
                <br>
                <input type="checkbox" id="baseball" value="baseball" name="sport">
                <label for="baseball">Baseball</label>    
            </div>
            <br>
            <input class="btn-default" type="submit" value="Submit">
        
        </form> 
        <br>
        
    </div>

  </div>

</div>